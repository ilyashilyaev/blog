<div id="comment-<%=comment.id %>">
  <p>
    <strong>Commenter:</strong>
    <%= comment.user.email %>
  </p>
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <p>
    <%= link_to 'Destroy Comment', [comment.article, comment],
                method: :delete,
                data: { config: 'Are you sure?', remote: true } %>
  </p>
  <hr>
</div>
