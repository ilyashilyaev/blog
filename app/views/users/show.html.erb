


<h4>User Avatar</h4>
<% if @user.avatar.present? %>
  <%= image_tag(@user.avatar.thumb.url) %>
<%end %>
<h4>User Name </h4>
  <%= @user.nickname %>
<h4>User Fist name</h4>
  <%= @user.first_name %>
<h4>User Last name</h4>
  <%= @user.last_name %>
<h4>User email</h4>
  <%= @user.email %>

<br>

<%= link_to 'My favorites', my_favorites_user_path(current_user), class: "btn btn-info" %><br>
